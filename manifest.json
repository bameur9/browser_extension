{
    "manifest_version": 2,
    "name": "Explicit Content Detector",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }],
    "browser_action": {
        "default_popup": "popup.html"
    }
}