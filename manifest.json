{
    "name": "Content Blocker",
    "description": "Block unwanted content.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png"
    },
    "permissions": ["webRequest", "webRequestBlocking", "http://*/*", "https://*/*"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }]

}